<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id= "employee" class = "com.bengregory.Employee" scope="prototype">
        <constructor-arg value="Ben Gregory"/>  <!-- constructor injection -->
        <constructor-arg value="20"/>
    </bean>

    <bean id= "department" class = "com.bengregory.Department" scope="singleton">
        <property name="name" value="CSE"/> <!-- setter injection -->
    </bean>
</beans>

